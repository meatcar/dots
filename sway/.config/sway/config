# client.focused          #f3f3f3  #f3f3f3  #000000  #f3f3f3  #f3f3f3
# client.focused_inactive #888899  #888899  #ffffff  #888899  #888899
# client.unfocused        #888888  #888888  #000000  #888888  #888888
# client.urgent           #ffaa55  #ffaa55  #ffffff  #ffaa55  #ffaa55

## Colors (Dark Borders)
client.focused            $hlcolor $hlcolor #000000  #884488  $hlcolor
client.focused_inactive   #000000  #323232  #ffffff  #442244  #323232
client.unfocused          #000000  #101010  #f3f3f3  #000000  #101010
client.urgent             #ffaa55  #ffaa55  #ffffff  #ffaa55  #ffaa55

# misc config
include /etc/sway/config.d/*

exec systemctl --user import-environment
exec systemctl --user start sway-session.target

exec waybar
exec dex -a -s "$XDG_CONFIG_HOME"/autostart
