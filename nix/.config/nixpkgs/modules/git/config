[mergetool]
  keepBackup = false
[commit]
  #gpgsign = true

[credential]
  helper = git-credential-libsecret
[core]
  pager = (diff-so-fancy || cat) | less --tabs=4 -RFX
[color "diff-highlight"]
  newNormal = green
  newHighlight = green bold 22
  oldNormal = red
  oldHighlight = red bold 52
