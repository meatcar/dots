#!/bin/sh 
##############################################################################
# Add a desired file to the dots folder.
##############################################################################

if [ $# -lt 2 ]; then 
    echo "usage: $0 <path> <name in dots dir>" >&2
    exit 1
fi 

DOTS="$HOME/dots"
DOTFILE="$DOTS/$2"

mv -f $1 $DOTFILE
ln -sf $DOTFILE $1
cd $DOTS
git add $DOTFILE
echo "ln -rs \"$2\" ~/\"$1\"" >> "$DOTS/reinstate.sh"

git commit -m "added $1 as $DOTS/$2"

echo "$1 has been dottified to $DOTS" 

