#!/bin/bash
temp="/tmp/wallp"
temp2="/tmp/wallp.$$"
trap "rm -f $temp2" 0 1 2 15

DROPBOX="$HOME/Sync"
WALLFOLDER="$DROPBOX/wallpapers/"
WALLLINK="$HOME/.wallpaper"

if [ ! -e $temp ]; then
    find "$WALLFOLDER" -type f | sort -R > $temp
fi

set_wall() {
    feh --bg-fill "$1"
    blur "$1" "$WALLLINK" &
}

case $# in
    1)
        case $1 in
            -p) #previous
                cur=`tail -1 $temp`
                cat $temp > $temp2
                echo "$cur" > $temp
                cat $temp2 >> $temp
                sed -i '$d' $temp
                cur=`tail -1 $temp`
                set_wall "$cur"
                ;;
            -r) #refresh
                find "$WALLFOLDER" -maxdepth 1 -type f | sort -R > $temp
                ;;
            -d) #delete from rotation
                cat $temp > $temp2
                sed -i 1d $temp2
                cat $temp2 > $temp
                cur=`head -1 $temp`
                set_wall "$cur"
                ;;
            -n) #next
                cur=`head -1 $temp`
                set_wall "$cur"
                cat $temp > $temp2
                sed -i 1d $temp2
                echo "$cur" >> $temp2
                cat $temp2 > $temp
                ;;
            -h|--help)
                echo "usage: $0 [-r|-d|-n|-p|-h|--help]" >&2
                exit 1
                ;;
            *)
                if [ -f "$1" ]; then
                    set_wall "$1"
                fi
                ;;
        esac 
        ;;
    0)
        tail -n1 "$temp"
        ;;
    *)
        echo "usage: $0 -(p|r|n|d)" >&2
        exit 1
        ;;
esac
