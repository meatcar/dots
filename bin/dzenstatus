#!/bin/sh
# Display a status in a dzen bar
fn='Terminus-9'
ta='r'
tw=1000
x=366
h=15
fg='#FFFFFF'
bg='#000000'
expand='l'

status() {
    while true
    do
        ~/dots/status/status.sh
        sleep 1s
    done
}

status | dzen2 -fn "$fn" -ta "$ta" -tw "$tw" -x "$x" -h "$h" -fg "$fg" -bg "$bg" -expand "$expand"
