# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_starttls   off
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# Gmail
account        gmail
host           smtp.gmail.com
port           465
from           denys.pavlov@gmail.com
user           denys.pavlov@gmail.com
passwordeval   "pass email/offlineimap/gmail"

account        fastmail
host           smtp.fastmail.com
port           465
from           me@denys.me
user           denys@fastmail.com
passwordeval   "pass email/offlineimap/fastmail"

account        zoho
host           smtp.zoho.com
port           465
from           info@dnka.ca
user           denys.pavlov@gmail.com
passwordeval   "pass email/offlineimap/zoho"

# Set a default account
account default : gmail
