                        xft:Unifont:size=9, \
                        xft:FreeSerif:size=9, \
                        xft:EmojiOne Color:kize=9, \
                        xft:Symbola:size=9
urxvt*boldFont:         xft:Iosevka:size=9:Bold, \
                        xft:DejaVu Sans Mono:size=9:Bold, \
                        xft:Unifont:size=9:Bold, \
                        xft:FreeSerif:size=9:Bold, \
                        xft:EmojiOne Color:size=9, \
                        xft:Symbola:size=9:Bold
urxvt*letterSpace:      0
urxvt*lineSpace:        0
