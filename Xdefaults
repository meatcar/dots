urxvt*scrollstyle:      plain
urxvt*saveLines:        65535
urxvt*pastableTabs:     true
urxvt*tripleclickwords:     true
urxvt*perl-lib:         /usr/lib/urxvt/perl/
urxvt*perl-ext-common:  default,matcher,clipboard,font-size
urxvt*matcher.button:   1
urxvt*url-launcher:     /home/meatcar/bin/mybrowser
urxvt.keysym.C-C:       perl:clipboard:copy
urxvt.keysym.C-V:       perl:clipboard:paste
urxvt.keysym.M-V:       perl:clipboard:paste_escaped
urxvt*keysym.C-minus:   perl:font-size:decrease
urxvt*keysym.C-plus:    perl:font-size:increase
urxvt*keysym.C-0:       perl:font-size:reset

!Disables the insanely annoying Ctrl+Shift shortcut that enters ISO14755 mode
urxvt*iso14755:         False

Xcursor.theme: breeze_cursors
dzen2.font:             Iosevka:size=6

! Fix home/end
URxvt.keysym.Home: \033[1~
URxvt.keysym.End: \033[4~
URxvt.keysym.KP_Home: \033[1~
