$base00 = #322931;
$base01 = #433b42;
$base02 = #5c545b;
$base03 = #797379;
$base04 = #989498;
$base05 = #b9b5b8;
$base06 = #d5d3d5;
$base07 = #ffffff;
$base08 = #dd464c;
$base09 = #fd8b19;
$base0a = #fdcc59;
$base0b = #8fc13e;
$base0c = #149b93;
$base0d = #1290bf;
$base0e = #c85e7c;
$base0f = #b33508;

// plain text
.pln {
  color: $base00;
}

@media screen {
  // string content
  .str {
    color: $base0b;
  }

  // a keyword
  .kwd {
    color: $base0e;
  }

  // a comment
  .com {
    color: $base04;
  }

  // a type name
  .typ {
    color: $base0d;
  }

  // a literal value
  .lit {
    color: $base09;
  }

  // punctuation
  .pun {
    color: $base00;
  }

  // lisp open bracket
  .opn {
    color: $base00;
  }

  // lisp close bracket
  .clo {
    color: $base00;
  }

  // a markup tag name
  .tag {
    color: $base08;
  }

  // a markup attribute name
  .atn {
    color: $base09;
  }

  // a markup attribute value
  .atv {
    color: $base0c;
  }

  // a declaration
  .dec {
    color: $base09;
  }

  // a variable name
  .var {
    color: $base08;
  }

  // a function name
  .fun {
    color: $base0d;
  }
}
// Use higher contrast and text-weight for printable form.
@media print, projection {
  .str {
    color: #006600;
  }

  .kwd {
    color: #006;
    font-weight: bold;
  }

  .com {
    color: #600;
    font-style: italic;
  }

  .typ {
    color: #404;
    font-weight: bold;
  }

  .lit {
    color: #004444;
  }

  .pun, .opn, .clo {
    color: #444400;
  }

  .tag {
    color: #006;
    font-weight: bold;
  }

  .atn {
    color: #440044;
  }

  .atv {
    color: #006600;
  }
}
// Style
pre.prettyprint {
  background: $base07;
  font-family: Menlo, "Bitstream Vera Sans Mono", "DejaVu Sans Mono", Monaco, Consolas, monospace;
  font-size: 12px;
  line-height: 1.5;
  border: 1px solid $base00;
  padding: 10px;
}

// Specify class=linenums on a pre to get line numbering
ol.linenums {
  margin-top: 0;
  margin-bottom: 0;
}

// IE indents via margin-left
li.L0,
li.L1,
li.L2,
li.L3,
li.L4,
li.L5,
li.L6,
li.L7,
li.L8,
li.L9 {
}

// Alternate shading for lines
li.L1,
li.L3,
li.L5,
li.L7,
li.L9 {
}
