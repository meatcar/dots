<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Seti UI Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#3B758C" background="#ffffff"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#41535B"/>
  <style name="CurrentLine" background="#43a5d5"/>
  <style name="LineNumber" foreground="#43a5d5"/>
  <style name="CurrentLineNumber" foreground="#41535B" bold="true"/>
  <style name="SearchResult" background="eeeeee"/>
  <style name="Parentheses" background="#d6d6d6" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#151718" background="#43a5d5"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#43a5d5"/>
  <style name="Occurrences.Rename" background="#41535B"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#db7b55"/>

  <!-- language primitives -->
  <style name="Number" foreground="#db7b55"/>
  <style name="String" foreground="#9fca56"/>
  <style name="Keyword" foreground="#a074c4"/>
  <style name="Operator" foreground="#3B758C"/>
  <style name="Preprocessor" foreground="#55b5db"/>
  <style name="Label" foreground="#Cd3f45"/>

  <!-- types, classes -->
  <style name="Type" foreground="#e6cd69"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#55b5db"/>
  <style name="VirtualMethod" foreground="#55b5db" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#8ec43d"/>
  <style name="Local" foreground="#3B758C"/>
  <style name="Static" foreground="#3B758C"/>
  <style name="JsScopeVar" foreground="#3B758C" italic="true"/>
  <style name="JsImportVar" foreground="#3B758C" italic="true"/>
  <style name="JsGlobalVar" foreground="#3B758C" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#d6d6d6"/>

  <!-- comments -->
  <style name="Comment" foreground="#43a5d5"/>
  <style name="DisabledCode" foreground="#43a5d5"/>
  <style name="Doxygen.Comment" foreground="#43a5d5"/>
  <style name="Doxygen.Tag" foreground="#43a5d5"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#a074c4"/>
  <style name="Binding" foreground="#Cd3f45"/>
  <style name="QmlExternalId" foreground="#55b5db" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#55b5db" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#a074c4"/>
  <style name="DiffLocation" foreground="#55b5db"/>
  <style name="AddedLine" foreground="#9fca56"/>
  <style name="RemovedLine" foreground="#e6cd69"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#a074c4"/>
  <style name="DiffContextLine" foreground="#55b5db"/>
  <style name="DiffSourceLine" foreground="#9fca56"/>
  <style name="DiffSourceChar" foreground="#e6cd69" background="#eeeeee"/>
  <style name="DiffDestLine" foreground="#9fca56"/>
  <style name="DiffDestChar" foreground="#e6cd69" background="#eeeeee"/>
</style-scheme>
