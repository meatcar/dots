<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Marrakesh Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#5f5b17" background="#faf0a5"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#6c6823"/>
  <style name="CurrentLine" background="#86813b"/>
  <style name="LineNumber" foreground="#86813b"/>
  <style name="CurrentLineNumber" foreground="#6c6823" bold="true"/>
  <style name="SearchResult" background="ccc37a"/>
  <style name="Parentheses" background="#948e48" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#201602" background="#86813b"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#86813b"/>
  <style name="Occurrences.Rename" background="#6c6823"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#b36144"/>

  <!-- language primitives -->
  <style name="Number" foreground="#b36144"/>
  <style name="String" foreground="#18974e"/>
  <style name="Keyword" foreground="#8868b3"/>
  <style name="Operator" foreground="#5f5b17"/>
  <style name="Preprocessor" foreground="#477ca1"/>
  <style name="Label" foreground="#c35359"/>

  <!-- types, classes -->
  <style name="Type" foreground="#a88339"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#477ca1"/>
  <style name="VirtualMethod" foreground="#477ca1" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#302e00"/>
  <style name="Local" foreground="#5f5b17"/>
  <style name="Static" foreground="#5f5b17"/>
  <style name="JsScopeVar" foreground="#5f5b17" italic="true"/>
  <style name="JsImportVar" foreground="#5f5b17" italic="true"/>
  <style name="JsGlobalVar" foreground="#5f5b17" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#948e48"/>

  <!-- comments -->
  <style name="Comment" foreground="#86813b"/>
  <style name="DisabledCode" foreground="#86813b"/>
  <style name="Doxygen.Comment" foreground="#86813b"/>
  <style name="Doxygen.Tag" foreground="#86813b"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#8868b3"/>
  <style name="Binding" foreground="#c35359"/>
  <style name="QmlExternalId" foreground="#477ca1" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#477ca1" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#8868b3"/>
  <style name="DiffLocation" foreground="#477ca1"/>
  <style name="AddedLine" foreground="#18974e"/>
  <style name="RemovedLine" foreground="#a88339"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#8868b3"/>
  <style name="DiffContextLine" foreground="#477ca1"/>
  <style name="DiffSourceLine" foreground="#18974e"/>
  <style name="DiffSourceChar" foreground="#a88339" background="#ccc37a"/>
  <style name="DiffDestLine" foreground="#18974e"/>
  <style name="DiffDestChar" foreground="#a88339" background="#ccc37a"/>
</style-scheme>
