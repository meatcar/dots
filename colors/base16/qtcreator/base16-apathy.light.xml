<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Apathy Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#184E45" background="#D2E7E4"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#2B685E"/>
  <style name="CurrentLine" background="#5F9C92"/>
  <style name="LineNumber" foreground="#5F9C92"/>
  <style name="CurrentLineNumber" foreground="#2B685E" bold="true"/>
  <style name="SearchResult" background="A7CEC8"/>
  <style name="Parentheses" background="#81B5AC" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#031A16" background="#5F9C92"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#5F9C92"/>
  <style name="Occurrences.Rename" background="#2B685E"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#3E7996"/>

  <!-- language primitives -->
  <style name="Number" foreground="#3E7996"/>
  <style name="String" foreground="#883E96"/>
  <style name="Keyword" foreground="#4C963E"/>
  <style name="Operator" foreground="#184E45"/>
  <style name="Preprocessor" foreground="#96883E"/>
  <style name="Label" foreground="#3E9688"/>

  <!-- types, classes -->
  <style name="Type" foreground="#3E4C96"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#96883E"/>
  <style name="VirtualMethod" foreground="#96883E" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#0B342D"/>
  <style name="Local" foreground="#184E45"/>
  <style name="Static" foreground="#184E45"/>
  <style name="JsScopeVar" foreground="#184E45" italic="true"/>
  <style name="JsImportVar" foreground="#184E45" italic="true"/>
  <style name="JsGlobalVar" foreground="#184E45" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#81B5AC"/>

  <!-- comments -->
  <style name="Comment" foreground="#5F9C92"/>
  <style name="DisabledCode" foreground="#5F9C92"/>
  <style name="Doxygen.Comment" foreground="#5F9C92"/>
  <style name="Doxygen.Tag" foreground="#5F9C92"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#4C963E"/>
  <style name="Binding" foreground="#3E9688"/>
  <style name="QmlExternalId" foreground="#96883E" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#96883E" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#4C963E"/>
  <style name="DiffLocation" foreground="#96883E"/>
  <style name="AddedLine" foreground="#883E96"/>
  <style name="RemovedLine" foreground="#3E4C96"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#4C963E"/>
  <style name="DiffContextLine" foreground="#96883E"/>
  <style name="DiffSourceLine" foreground="#883E96"/>
  <style name="DiffSourceChar" foreground="#3E4C96" background="#A7CEC8"/>
  <style name="DiffDestLine" foreground="#883E96"/>
  <style name="DiffDestChar" foreground="#3E4C96" background="#A7CEC8"/>
</style-scheme>
