<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Tomorrow Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#373b41" background="#ffffff"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#969896"/>
  <style name="CurrentLine" background="#b4b7b4"/>
  <style name="LineNumber" foreground="#b4b7b4"/>
  <style name="CurrentLineNumber" foreground="#969896" bold="true"/>
  <style name="SearchResult" background="e0e0e0"/>
  <style name="Parentheses" background="#c5c8c6" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#1d1f21" background="#b4b7b4"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#b4b7b4"/>
  <style name="Occurrences.Rename" background="#969896"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#de935f"/>

  <!-- language primitives -->
  <style name="Number" foreground="#de935f"/>
  <style name="String" foreground="#b5bd68"/>
  <style name="Keyword" foreground="#b294bb"/>
  <style name="Operator" foreground="#373b41"/>
  <style name="Preprocessor" foreground="#81a2be"/>
  <style name="Label" foreground="#cc6666"/>

  <!-- types, classes -->
  <style name="Type" foreground="#f0c674"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#81a2be"/>
  <style name="VirtualMethod" foreground="#81a2be" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#282a2e"/>
  <style name="Local" foreground="#373b41"/>
  <style name="Static" foreground="#373b41"/>
  <style name="JsScopeVar" foreground="#373b41" italic="true"/>
  <style name="JsImportVar" foreground="#373b41" italic="true"/>
  <style name="JsGlobalVar" foreground="#373b41" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#c5c8c6"/>

  <!-- comments -->
  <style name="Comment" foreground="#b4b7b4"/>
  <style name="DisabledCode" foreground="#b4b7b4"/>
  <style name="Doxygen.Comment" foreground="#b4b7b4"/>
  <style name="Doxygen.Tag" foreground="#b4b7b4"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#b294bb"/>
  <style name="Binding" foreground="#cc6666"/>
  <style name="QmlExternalId" foreground="#81a2be" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#81a2be" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#b294bb"/>
  <style name="DiffLocation" foreground="#81a2be"/>
  <style name="AddedLine" foreground="#b5bd68"/>
  <style name="RemovedLine" foreground="#f0c674"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#b294bb"/>
  <style name="DiffContextLine" foreground="#81a2be"/>
  <style name="DiffSourceLine" foreground="#b5bd68"/>
  <style name="DiffSourceChar" foreground="#f0c674" background="#e0e0e0"/>
  <style name="DiffDestLine" foreground="#b5bd68"/>
  <style name="DiffDestChar" foreground="#f0c674" background="#e0e0e0"/>
</style-scheme>
