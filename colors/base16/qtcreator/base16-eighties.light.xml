<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Eighties Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#515151" background="#f2f0ec"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#747369"/>
  <style name="CurrentLine" background="#a09f93"/>
  <style name="LineNumber" foreground="#a09f93"/>
  <style name="CurrentLineNumber" foreground="#747369" bold="true"/>
  <style name="SearchResult" background="e8e6df"/>
  <style name="Parentheses" background="#d3d0c8" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#2d2d2d" background="#a09f93"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#a09f93"/>
  <style name="Occurrences.Rename" background="#747369"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#f99157"/>

  <!-- language primitives -->
  <style name="Number" foreground="#f99157"/>
  <style name="String" foreground="#99cc99"/>
  <style name="Keyword" foreground="#cc99cc"/>
  <style name="Operator" foreground="#515151"/>
  <style name="Preprocessor" foreground="#6699cc"/>
  <style name="Label" foreground="#f2777a"/>

  <!-- types, classes -->
  <style name="Type" foreground="#ffcc66"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#6699cc"/>
  <style name="VirtualMethod" foreground="#6699cc" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#393939"/>
  <style name="Local" foreground="#515151"/>
  <style name="Static" foreground="#515151"/>
  <style name="JsScopeVar" foreground="#515151" italic="true"/>
  <style name="JsImportVar" foreground="#515151" italic="true"/>
  <style name="JsGlobalVar" foreground="#515151" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#d3d0c8"/>

  <!-- comments -->
  <style name="Comment" foreground="#a09f93"/>
  <style name="DisabledCode" foreground="#a09f93"/>
  <style name="Doxygen.Comment" foreground="#a09f93"/>
  <style name="Doxygen.Tag" foreground="#a09f93"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#cc99cc"/>
  <style name="Binding" foreground="#f2777a"/>
  <style name="QmlExternalId" foreground="#6699cc" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#6699cc" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#cc99cc"/>
  <style name="DiffLocation" foreground="#6699cc"/>
  <style name="AddedLine" foreground="#99cc99"/>
  <style name="RemovedLine" foreground="#ffcc66"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#cc99cc"/>
  <style name="DiffContextLine" foreground="#6699cc"/>
  <style name="DiffSourceLine" foreground="#99cc99"/>
  <style name="DiffSourceChar" foreground="#ffcc66" background="#e8e6df"/>
  <style name="DiffDestLine" foreground="#99cc99"/>
  <style name="DiffDestChar" foreground="#ffcc66" background="#e8e6df"/>
</style-scheme>
