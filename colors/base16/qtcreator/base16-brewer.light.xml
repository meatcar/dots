<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Brewer Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#515253" background="#fcfdfe"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#737475"/>
  <style name="CurrentLine" background="#959697"/>
  <style name="LineNumber" foreground="#959697"/>
  <style name="CurrentLineNumber" foreground="#737475" bold="true"/>
  <style name="SearchResult" background="dadbdc"/>
  <style name="Parentheses" background="#b7b8b9" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#0c0d0e" background="#959697"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#959697"/>
  <style name="Occurrences.Rename" background="#737475"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#e6550d"/>

  <!-- language primitives -->
  <style name="Number" foreground="#e6550d"/>
  <style name="String" foreground="#31a354"/>
  <style name="Keyword" foreground="#756bb1"/>
  <style name="Operator" foreground="#515253"/>
  <style name="Preprocessor" foreground="#3182bd"/>
  <style name="Label" foreground="#e31a1c"/>

  <!-- types, classes -->
  <style name="Type" foreground="#dca060"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#3182bd"/>
  <style name="VirtualMethod" foreground="#3182bd" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#2e2f30"/>
  <style name="Local" foreground="#515253"/>
  <style name="Static" foreground="#515253"/>
  <style name="JsScopeVar" foreground="#515253" italic="true"/>
  <style name="JsImportVar" foreground="#515253" italic="true"/>
  <style name="JsGlobalVar" foreground="#515253" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#b7b8b9"/>

  <!-- comments -->
  <style name="Comment" foreground="#959697"/>
  <style name="DisabledCode" foreground="#959697"/>
  <style name="Doxygen.Comment" foreground="#959697"/>
  <style name="Doxygen.Tag" foreground="#959697"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#756bb1"/>
  <style name="Binding" foreground="#e31a1c"/>
  <style name="QmlExternalId" foreground="#3182bd" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#3182bd" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#756bb1"/>
  <style name="DiffLocation" foreground="#3182bd"/>
  <style name="AddedLine" foreground="#31a354"/>
  <style name="RemovedLine" foreground="#dca060"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#756bb1"/>
  <style name="DiffContextLine" foreground="#3182bd"/>
  <style name="DiffSourceLine" foreground="#31a354"/>
  <style name="DiffSourceChar" foreground="#dca060" background="#dadbdc"/>
  <style name="DiffDestLine" foreground="#31a354"/>
  <style name="DiffDestChar" foreground="#dca060" background="#dadbdc"/>
</style-scheme>
