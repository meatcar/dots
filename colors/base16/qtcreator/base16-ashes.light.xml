<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Ashes Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#565E65" background="#F3F4F5"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#747C84"/>
  <style name="CurrentLine" background="#ADB3BA"/>
  <style name="LineNumber" foreground="#ADB3BA"/>
  <style name="CurrentLineNumber" foreground="#747C84" bold="true"/>
  <style name="SearchResult" background="DFE2E5"/>
  <style name="Parentheses" background="#C7CCD1" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#1C2023" background="#ADB3BA"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#ADB3BA"/>
  <style name="Occurrences.Rename" background="#747C84"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#C7C795"/>

  <!-- language primitives -->
  <style name="Number" foreground="#C7C795"/>
  <style name="String" foreground="#95C7AE"/>
  <style name="Keyword" foreground="#C795AE"/>
  <style name="Operator" foreground="#565E65"/>
  <style name="Preprocessor" foreground="#AE95C7"/>
  <style name="Label" foreground="#C7AE95"/>

  <!-- types, classes -->
  <style name="Type" foreground="#AEC795"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#AE95C7"/>
  <style name="VirtualMethod" foreground="#AE95C7" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#393F45"/>
  <style name="Local" foreground="#565E65"/>
  <style name="Static" foreground="#565E65"/>
  <style name="JsScopeVar" foreground="#565E65" italic="true"/>
  <style name="JsImportVar" foreground="#565E65" italic="true"/>
  <style name="JsGlobalVar" foreground="#565E65" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#C7CCD1"/>

  <!-- comments -->
  <style name="Comment" foreground="#ADB3BA"/>
  <style name="DisabledCode" foreground="#ADB3BA"/>
  <style name="Doxygen.Comment" foreground="#ADB3BA"/>
  <style name="Doxygen.Tag" foreground="#ADB3BA"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#C795AE"/>
  <style name="Binding" foreground="#C7AE95"/>
  <style name="QmlExternalId" foreground="#AE95C7" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#AE95C7" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#C795AE"/>
  <style name="DiffLocation" foreground="#AE95C7"/>
  <style name="AddedLine" foreground="#95C7AE"/>
  <style name="RemovedLine" foreground="#AEC795"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#C795AE"/>
  <style name="DiffContextLine" foreground="#AE95C7"/>
  <style name="DiffSourceLine" foreground="#95C7AE"/>
  <style name="DiffSourceChar" foreground="#AEC795" background="#DFE2E5"/>
  <style name="DiffDestLine" foreground="#95C7AE"/>
  <style name="DiffDestChar" foreground="#AEC795" background="#DFE2E5"/>
</style-scheme>
