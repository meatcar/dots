<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Flat Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#7F8C8D" background="#ECF0F1"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#95A5A6"/>
  <style name="CurrentLine" background="#BDC3C7"/>
  <style name="LineNumber" foreground="#BDC3C7"/>
  <style name="CurrentLineNumber" foreground="#95A5A6" bold="true"/>
  <style name="SearchResult" background="f5f5f5"/>
  <style name="Parentheses" background="#e0e0e0" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#2C3E50" background="#BDC3C7"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#BDC3C7"/>
  <style name="Occurrences.Rename" background="#95A5A6"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#E67E22"/>

  <!-- language primitives -->
  <style name="Number" foreground="#E67E22"/>
  <style name="String" foreground="#2ECC71"/>
  <style name="Keyword" foreground="#9B59B6"/>
  <style name="Operator" foreground="#7F8C8D"/>
  <style name="Preprocessor" foreground="#3498DB"/>
  <style name="Label" foreground="#E74C3C"/>

  <!-- types, classes -->
  <style name="Type" foreground="#F1C40F"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#3498DB"/>
  <style name="VirtualMethod" foreground="#3498DB" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#34495E"/>
  <style name="Local" foreground="#7F8C8D"/>
  <style name="Static" foreground="#7F8C8D"/>
  <style name="JsScopeVar" foreground="#7F8C8D" italic="true"/>
  <style name="JsImportVar" foreground="#7F8C8D" italic="true"/>
  <style name="JsGlobalVar" foreground="#7F8C8D" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#e0e0e0"/>

  <!-- comments -->
  <style name="Comment" foreground="#BDC3C7"/>
  <style name="DisabledCode" foreground="#BDC3C7"/>
  <style name="Doxygen.Comment" foreground="#BDC3C7"/>
  <style name="Doxygen.Tag" foreground="#BDC3C7"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#9B59B6"/>
  <style name="Binding" foreground="#E74C3C"/>
  <style name="QmlExternalId" foreground="#3498DB" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#3498DB" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#9B59B6"/>
  <style name="DiffLocation" foreground="#3498DB"/>
  <style name="AddedLine" foreground="#2ECC71"/>
  <style name="RemovedLine" foreground="#F1C40F"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#9B59B6"/>
  <style name="DiffContextLine" foreground="#3498DB"/>
  <style name="DiffSourceLine" foreground="#2ECC71"/>
  <style name="DiffSourceChar" foreground="#F1C40F" background="#f5f5f5"/>
  <style name="DiffDestLine" foreground="#2ECC71"/>
  <style name="DiffDestChar" foreground="#F1C40F" background="#f5f5f5"/>
</style-scheme>
