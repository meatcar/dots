<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Codeschool Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#2a343a" background="#b5d8f6"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#3f4944"/>
  <style name="CurrentLine" background="#84898c"/>
  <style name="LineNumber" foreground="#84898c"/>
  <style name="CurrentLineNumber" foreground="#3f4944" bold="true"/>
  <style name="SearchResult" background="a7cfa3"/>
  <style name="Parentheses" background="#9ea7a6" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#232c31" background="#84898c"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#84898c"/>
  <style name="Occurrences.Rename" background="#3f4944"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#43820d"/>

  <!-- language primitives -->
  <style name="Number" foreground="#43820d"/>
  <style name="String" foreground="#237986"/>
  <style name="Keyword" foreground="#c59820"/>
  <style name="Operator" foreground="#2a343a"/>
  <style name="Preprocessor" foreground="#484d79"/>
  <style name="Label" foreground="#2a5491"/>

  <!-- types, classes -->
  <style name="Type" foreground="#a03b1e"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#484d79"/>
  <style name="VirtualMethod" foreground="#484d79" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#1c3657"/>
  <style name="Local" foreground="#2a343a"/>
  <style name="Static" foreground="#2a343a"/>
  <style name="JsScopeVar" foreground="#2a343a" italic="true"/>
  <style name="JsImportVar" foreground="#2a343a" italic="true"/>
  <style name="JsGlobalVar" foreground="#2a343a" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#9ea7a6"/>

  <!-- comments -->
  <style name="Comment" foreground="#84898c"/>
  <style name="DisabledCode" foreground="#84898c"/>
  <style name="Doxygen.Comment" foreground="#84898c"/>
  <style name="Doxygen.Tag" foreground="#84898c"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#c59820"/>
  <style name="Binding" foreground="#2a5491"/>
  <style name="QmlExternalId" foreground="#484d79" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#484d79" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#c59820"/>
  <style name="DiffLocation" foreground="#484d79"/>
  <style name="AddedLine" foreground="#237986"/>
  <style name="RemovedLine" foreground="#a03b1e"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#c59820"/>
  <style name="DiffContextLine" foreground="#484d79"/>
  <style name="DiffSourceLine" foreground="#237986"/>
  <style name="DiffSourceChar" foreground="#a03b1e" background="#a7cfa3"/>
  <style name="DiffDestLine" foreground="#237986"/>
  <style name="DiffDestChar" foreground="#a03b1e" background="#a7cfa3"/>
</style-scheme>
