<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 IR Black Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#484844" background="#fdfbee"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#6c6c66"/>
  <style name="CurrentLine" background="#918f88"/>
  <style name="LineNumber" foreground="#918f88"/>
  <style name="CurrentLineNumber" foreground="#6c6c66" bold="true"/>
  <style name="SearchResult" background="d9d7cc"/>
  <style name="Parentheses" background="#b5b3aa" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#000000" background="#918f88"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#918f88"/>
  <style name="Occurrences.Rename" background="#6c6c66"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#e9c062"/>

  <!-- language primitives -->
  <style name="Number" foreground="#e9c062"/>
  <style name="String" foreground="#a8ff60"/>
  <style name="Keyword" foreground="#ff73fd"/>
  <style name="Operator" foreground="#484844"/>
  <style name="Preprocessor" foreground="#96cbfe"/>
  <style name="Label" foreground="#ff6c60"/>

  <!-- types, classes -->
  <style name="Type" foreground="#ffffb6"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#96cbfe"/>
  <style name="VirtualMethod" foreground="#96cbfe" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#242422"/>
  <style name="Local" foreground="#484844"/>
  <style name="Static" foreground="#484844"/>
  <style name="JsScopeVar" foreground="#484844" italic="true"/>
  <style name="JsImportVar" foreground="#484844" italic="true"/>
  <style name="JsGlobalVar" foreground="#484844" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#b5b3aa"/>

  <!-- comments -->
  <style name="Comment" foreground="#918f88"/>
  <style name="DisabledCode" foreground="#918f88"/>
  <style name="Doxygen.Comment" foreground="#918f88"/>
  <style name="Doxygen.Tag" foreground="#918f88"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#ff73fd"/>
  <style name="Binding" foreground="#ff6c60"/>
  <style name="QmlExternalId" foreground="#96cbfe" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#96cbfe" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#ff73fd"/>
  <style name="DiffLocation" foreground="#96cbfe"/>
  <style name="AddedLine" foreground="#a8ff60"/>
  <style name="RemovedLine" foreground="#ffffb6"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#ff73fd"/>
  <style name="DiffContextLine" foreground="#96cbfe"/>
  <style name="DiffSourceLine" foreground="#a8ff60"/>
  <style name="DiffSourceChar" foreground="#ffffb6" background="#d9d7cc"/>
  <style name="DiffDestLine" foreground="#a8ff60"/>
  <style name="DiffDestChar" foreground="#ffffb6" background="#d9d7cc"/>
</style-scheme>
