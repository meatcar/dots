<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Colors Dark">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#bbbbbb" background="#111111"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#999999"/>
  <style name="CurrentLine" background="#777777"/>
  <style name="LineNumber" foreground="#777777"/>
  <style name="CurrentLineNumber" foreground="#999999" bold="true"/>
  <style name="SearchResult" background="333333"/>
  <style name="Parentheses" background="#555555" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#ffffff" background="#777777"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#777777"/>
  <style name="Occurrences.Rename" background="#999999"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#ff851b"/>

  <!-- language primitives -->
  <style name="Number" foreground="#ff851b"/>
  <style name="String" foreground="#2ecc40"/>
  <style name="Keyword" foreground="#b10dc9"/>
  <style name="Operator" foreground="#bbbbbb"/>
  <style name="Preprocessor" foreground="#0074d9"/>
  <style name="Label" foreground="#ff4136"/>

  <!-- types, classes -->
  <style name="Type" foreground="#ffdc00"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#0074d9"/>
  <style name="VirtualMethod" foreground="#0074d9" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#dddddd"/>
  <style name="Local" foreground="#bbbbbb"/>
  <style name="Static" foreground="#bbbbbb"/>
  <style name="JsScopeVar" foreground="#bbbbbb" italic="true"/>
  <style name="JsImportVar" foreground="#bbbbbb" italic="true"/>
  <style name="JsGlobalVar" foreground="#bbbbbb" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#555555"/>

  <!-- comments -->
  <style name="Comment" foreground="#777777"/>
  <style name="DisabledCode" foreground="#777777"/>
  <style name="Doxygen.Comment" foreground="#777777"/>
  <style name="Doxygen.Tag" foreground="#777777"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#b10dc9"/>
  <style name="Binding" foreground="#ff4136"/>
  <style name="QmlExternalId" foreground="#0074d9" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#0074d9" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#b10dc9"/>
  <style name="DiffLocation" foreground="#0074d9"/>
  <style name="AddedLine" foreground="#2ecc40"/>
  <style name="RemovedLine" foreground="#ffdc00"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#b10dc9"/>
  <style name="DiffContextLine" foreground="#0074d9"/>
  <style name="DiffSourceLine" foreground="#2ecc40"/>
  <style name="DiffSourceChar" foreground="#ffdc00" background="#333333"/>
  <style name="DiffDestLine" foreground="#2ecc40"/>
  <style name="DiffDestChar" foreground="#ffdc00" background="#333333"/>
</style-scheme>
