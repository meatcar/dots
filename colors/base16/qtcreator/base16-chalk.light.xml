<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Chalk Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#303030" background="#f5f5f5"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#505050"/>
  <style name="CurrentLine" background="#b0b0b0"/>
  <style name="LineNumber" foreground="#b0b0b0"/>
  <style name="CurrentLineNumber" foreground="#505050" bold="true"/>
  <style name="SearchResult" background="e0e0e0"/>
  <style name="Parentheses" background="#d0d0d0" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#151515" background="#b0b0b0"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#b0b0b0"/>
  <style name="Occurrences.Rename" background="#505050"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#eda987"/>

  <!-- language primitives -->
  <style name="Number" foreground="#eda987"/>
  <style name="String" foreground="#acc267"/>
  <style name="Keyword" foreground="#e1a3ee"/>
  <style name="Operator" foreground="#303030"/>
  <style name="Preprocessor" foreground="#6fc2ef"/>
  <style name="Label" foreground="#fb9fb1"/>

  <!-- types, classes -->
  <style name="Type" foreground="#ddb26f"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#6fc2ef"/>
  <style name="VirtualMethod" foreground="#6fc2ef" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#202020"/>
  <style name="Local" foreground="#303030"/>
  <style name="Static" foreground="#303030"/>
  <style name="JsScopeVar" foreground="#303030" italic="true"/>
  <style name="JsImportVar" foreground="#303030" italic="true"/>
  <style name="JsGlobalVar" foreground="#303030" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#d0d0d0"/>

  <!-- comments -->
  <style name="Comment" foreground="#b0b0b0"/>
  <style name="DisabledCode" foreground="#b0b0b0"/>
  <style name="Doxygen.Comment" foreground="#b0b0b0"/>
  <style name="Doxygen.Tag" foreground="#b0b0b0"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#e1a3ee"/>
  <style name="Binding" foreground="#fb9fb1"/>
  <style name="QmlExternalId" foreground="#6fc2ef" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#6fc2ef" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#e1a3ee"/>
  <style name="DiffLocation" foreground="#6fc2ef"/>
  <style name="AddedLine" foreground="#acc267"/>
  <style name="RemovedLine" foreground="#ddb26f"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#e1a3ee"/>
  <style name="DiffContextLine" foreground="#6fc2ef"/>
  <style name="DiffSourceLine" foreground="#acc267"/>
  <style name="DiffSourceChar" foreground="#ddb26f" background="#e0e0e0"/>
  <style name="DiffDestLine" foreground="#acc267"/>
  <style name="DiffDestChar" foreground="#ddb26f" background="#e0e0e0"/>
</style-scheme>
