<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Twilight Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#464b50" background="#ffffff"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#5f5a60"/>
  <style name="CurrentLine" background="#838184"/>
  <style name="LineNumber" foreground="#838184"/>
  <style name="CurrentLineNumber" foreground="#5f5a60" bold="true"/>
  <style name="SearchResult" background="c3c3c3"/>
  <style name="Parentheses" background="#a7a7a7" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#1e1e1e" background="#838184"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#838184"/>
  <style name="Occurrences.Rename" background="#5f5a60"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#cda869"/>

  <!-- language primitives -->
  <style name="Number" foreground="#cda869"/>
  <style name="String" foreground="#8f9d6a"/>
  <style name="Keyword" foreground="#9b859d"/>
  <style name="Operator" foreground="#464b50"/>
  <style name="Preprocessor" foreground="#7587a6"/>
  <style name="Label" foreground="#cf6a4c"/>

  <!-- types, classes -->
  <style name="Type" foreground="#f9ee98"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#7587a6"/>
  <style name="VirtualMethod" foreground="#7587a6" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#323537"/>
  <style name="Local" foreground="#464b50"/>
  <style name="Static" foreground="#464b50"/>
  <style name="JsScopeVar" foreground="#464b50" italic="true"/>
  <style name="JsImportVar" foreground="#464b50" italic="true"/>
  <style name="JsGlobalVar" foreground="#464b50" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#a7a7a7"/>

  <!-- comments -->
  <style name="Comment" foreground="#838184"/>
  <style name="DisabledCode" foreground="#838184"/>
  <style name="Doxygen.Comment" foreground="#838184"/>
  <style name="Doxygen.Tag" foreground="#838184"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#9b859d"/>
  <style name="Binding" foreground="#cf6a4c"/>
  <style name="QmlExternalId" foreground="#7587a6" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#7587a6" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#9b859d"/>
  <style name="DiffLocation" foreground="#7587a6"/>
  <style name="AddedLine" foreground="#8f9d6a"/>
  <style name="RemovedLine" foreground="#f9ee98"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#9b859d"/>
  <style name="DiffContextLine" foreground="#7587a6"/>
  <style name="DiffSourceLine" foreground="#8f9d6a"/>
  <style name="DiffSourceChar" foreground="#f9ee98" background="#c3c3c3"/>
  <style name="DiffDestLine" foreground="#8f9d6a"/>
  <style name="DiffDestChar" foreground="#f9ee98" background="#c3c3c3"/>
</style-scheme>
