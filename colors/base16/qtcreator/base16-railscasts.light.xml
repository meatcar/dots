<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Railscasts Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#3a4055" background="#f9f7f3"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#5a647e"/>
  <style name="CurrentLine" background="#d4cfc9"/>
  <style name="LineNumber" foreground="#d4cfc9"/>
  <style name="CurrentLineNumber" foreground="#5a647e" bold="true"/>
  <style name="SearchResult" background="f4f1ed"/>
  <style name="Parentheses" background="#e6e1dc" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#2b2b2b" background="#d4cfc9"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#d4cfc9"/>
  <style name="Occurrences.Rename" background="#5a647e"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#cc7833"/>

  <!-- language primitives -->
  <style name="Number" foreground="#cc7833"/>
  <style name="String" foreground="#a5c261"/>
  <style name="Keyword" foreground="#b6b3eb"/>
  <style name="Operator" foreground="#3a4055"/>
  <style name="Preprocessor" foreground="#6d9cbe"/>
  <style name="Label" foreground="#da4939"/>

  <!-- types, classes -->
  <style name="Type" foreground="#ffc66d"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#6d9cbe"/>
  <style name="VirtualMethod" foreground="#6d9cbe" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#272935"/>
  <style name="Local" foreground="#3a4055"/>
  <style name="Static" foreground="#3a4055"/>
  <style name="JsScopeVar" foreground="#3a4055" italic="true"/>
  <style name="JsImportVar" foreground="#3a4055" italic="true"/>
  <style name="JsGlobalVar" foreground="#3a4055" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#e6e1dc"/>

  <!-- comments -->
  <style name="Comment" foreground="#d4cfc9"/>
  <style name="DisabledCode" foreground="#d4cfc9"/>
  <style name="Doxygen.Comment" foreground="#d4cfc9"/>
  <style name="Doxygen.Tag" foreground="#d4cfc9"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#b6b3eb"/>
  <style name="Binding" foreground="#da4939"/>
  <style name="QmlExternalId" foreground="#6d9cbe" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#6d9cbe" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#b6b3eb"/>
  <style name="DiffLocation" foreground="#6d9cbe"/>
  <style name="AddedLine" foreground="#a5c261"/>
  <style name="RemovedLine" foreground="#ffc66d"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#b6b3eb"/>
  <style name="DiffContextLine" foreground="#6d9cbe"/>
  <style name="DiffSourceLine" foreground="#a5c261"/>
  <style name="DiffSourceChar" foreground="#ffc66d" background="#f4f1ed"/>
  <style name="DiffDestLine" foreground="#a5c261"/>
  <style name="DiffDestChar" foreground="#ffc66d" background="#f4f1ed"/>
</style-scheme>
