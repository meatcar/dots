<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Darktooth Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#504945" background="#FDF4C1"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#665C54"/>
  <style name="CurrentLine" background="#928374"/>
  <style name="LineNumber" foreground="#928374"/>
  <style name="CurrentLineNumber" foreground="#665C54" bold="true"/>
  <style name="SearchResult" background="D5C4A1"/>
  <style name="Parentheses" background="#A89984" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#1D2021" background="#928374"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#928374"/>
  <style name="Occurrences.Rename" background="#665C54"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#FE8625"/>

  <!-- language primitives -->
  <style name="Number" foreground="#FE8625"/>
  <style name="String" foreground="#95C085"/>
  <style name="Keyword" foreground="#8F4673"/>
  <style name="Operator" foreground="#504945"/>
  <style name="Preprocessor" foreground="#0D6678"/>
  <style name="Label" foreground="#FB543F"/>

  <!-- types, classes -->
  <style name="Type" foreground="#FAC03B"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#0D6678"/>
  <style name="VirtualMethod" foreground="#0D6678" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#32302F"/>
  <style name="Local" foreground="#504945"/>
  <style name="Static" foreground="#504945"/>
  <style name="JsScopeVar" foreground="#504945" italic="true"/>
  <style name="JsImportVar" foreground="#504945" italic="true"/>
  <style name="JsGlobalVar" foreground="#504945" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#A89984"/>

  <!-- comments -->
  <style name="Comment" foreground="#928374"/>
  <style name="DisabledCode" foreground="#928374"/>
  <style name="Doxygen.Comment" foreground="#928374"/>
  <style name="Doxygen.Tag" foreground="#928374"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#8F4673"/>
  <style name="Binding" foreground="#FB543F"/>
  <style name="QmlExternalId" foreground="#0D6678" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#0D6678" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#8F4673"/>
  <style name="DiffLocation" foreground="#0D6678"/>
  <style name="AddedLine" foreground="#95C085"/>
  <style name="RemovedLine" foreground="#FAC03B"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#8F4673"/>
  <style name="DiffContextLine" foreground="#0D6678"/>
  <style name="DiffSourceLine" foreground="#95C085"/>
  <style name="DiffSourceChar" foreground="#FAC03B" background="#D5C4A1"/>
  <style name="DiffDestLine" foreground="#95C085"/>
  <style name="DiffDestChar" foreground="#FAC03B" background="#D5C4A1"/>
</style-scheme>
