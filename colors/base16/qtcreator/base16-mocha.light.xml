<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Mocha Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#645240" background="#f5eeeb"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#7e705a"/>
  <style name="CurrentLine" background="#b8afad"/>
  <style name="LineNumber" foreground="#b8afad"/>
  <style name="CurrentLineNumber" foreground="#7e705a" bold="true"/>
  <style name="SearchResult" background="e9e1dd"/>
  <style name="Parentheses" background="#d0c8c6" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#3B3228" background="#b8afad"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#b8afad"/>
  <style name="Occurrences.Rename" background="#7e705a"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#d28b71"/>

  <!-- language primitives -->
  <style name="Number" foreground="#d28b71"/>
  <style name="String" foreground="#beb55b"/>
  <style name="Keyword" foreground="#a89bb9"/>
  <style name="Operator" foreground="#645240"/>
  <style name="Preprocessor" foreground="#8ab3b5"/>
  <style name="Label" foreground="#cb6077"/>

  <!-- types, classes -->
  <style name="Type" foreground="#f4bc87"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#8ab3b5"/>
  <style name="VirtualMethod" foreground="#8ab3b5" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#534636"/>
  <style name="Local" foreground="#645240"/>
  <style name="Static" foreground="#645240"/>
  <style name="JsScopeVar" foreground="#645240" italic="true"/>
  <style name="JsImportVar" foreground="#645240" italic="true"/>
  <style name="JsGlobalVar" foreground="#645240" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#d0c8c6"/>

  <!-- comments -->
  <style name="Comment" foreground="#b8afad"/>
  <style name="DisabledCode" foreground="#b8afad"/>
  <style name="Doxygen.Comment" foreground="#b8afad"/>
  <style name="Doxygen.Tag" foreground="#b8afad"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#a89bb9"/>
  <style name="Binding" foreground="#cb6077"/>
  <style name="QmlExternalId" foreground="#8ab3b5" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#8ab3b5" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#a89bb9"/>
  <style name="DiffLocation" foreground="#8ab3b5"/>
  <style name="AddedLine" foreground="#beb55b"/>
  <style name="RemovedLine" foreground="#f4bc87"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#a89bb9"/>
  <style name="DiffContextLine" foreground="#8ab3b5"/>
  <style name="DiffSourceLine" foreground="#beb55b"/>
  <style name="DiffSourceChar" foreground="#f4bc87" background="#e9e1dd"/>
  <style name="DiffDestLine" foreground="#beb55b"/>
  <style name="DiffDestChar" foreground="#f4bc87" background="#e9e1dd"/>
</style-scheme>
