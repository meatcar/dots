<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 London Tube Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#5a5758" background="#ffffff"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#737171"/>
  <style name="CurrentLine" background="#959ca1"/>
  <style name="LineNumber" foreground="#959ca1"/>
  <style name="CurrentLineNumber" foreground="#737171" bold="true"/>
  <style name="SearchResult" background="e7e7e8"/>
  <style name="Parentheses" background="#d9d8d8" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#231f20" background="#959ca1"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#959ca1"/>
  <style name="Occurrences.Rename" background="#737171"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#f386a1"/>

  <!-- language primitives -->
  <style name="Number" foreground="#f386a1"/>
  <style name="String" foreground="#00853e"/>
  <style name="Keyword" foreground="#98005d"/>
  <style name="Operator" foreground="#5a5758"/>
  <style name="Preprocessor" foreground="#009ddc"/>
  <style name="Label" foreground="#ee2e24"/>

  <!-- types, classes -->
  <style name="Type" foreground="#ffd204"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#009ddc"/>
  <style name="VirtualMethod" foreground="#009ddc" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#1c3f95"/>
  <style name="Local" foreground="#5a5758"/>
  <style name="Static" foreground="#5a5758"/>
  <style name="JsScopeVar" foreground="#5a5758" italic="true"/>
  <style name="JsImportVar" foreground="#5a5758" italic="true"/>
  <style name="JsGlobalVar" foreground="#5a5758" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#d9d8d8"/>

  <!-- comments -->
  <style name="Comment" foreground="#959ca1"/>
  <style name="DisabledCode" foreground="#959ca1"/>
  <style name="Doxygen.Comment" foreground="#959ca1"/>
  <style name="Doxygen.Tag" foreground="#959ca1"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#98005d"/>
  <style name="Binding" foreground="#ee2e24"/>
  <style name="QmlExternalId" foreground="#009ddc" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#009ddc" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#98005d"/>
  <style name="DiffLocation" foreground="#009ddc"/>
  <style name="AddedLine" foreground="#00853e"/>
  <style name="RemovedLine" foreground="#ffd204"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#98005d"/>
  <style name="DiffContextLine" foreground="#009ddc"/>
  <style name="DiffSourceLine" foreground="#00853e"/>
  <style name="DiffSourceChar" foreground="#ffd204" background="#e7e7e8"/>
  <style name="DiffDestLine" foreground="#00853e"/>
  <style name="DiffDestChar" foreground="#ffd204" background="#e7e7e8"/>
</style-scheme>
