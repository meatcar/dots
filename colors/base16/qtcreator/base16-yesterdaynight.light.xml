<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Yesterday Night Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#65737e" background="#ffffff"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#a7adba"/>
  <style name="CurrentLine" background="#c0c5ce"/>
  <style name="LineNumber" foreground="#c0c5ce"/>
  <style name="CurrentLineNumber" foreground="#a7adba" bold="true"/>
  <style name="SearchResult" background="eff1f5"/>
  <style name="Parentheses" background="#dfe1e8" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#343d46" background="#c0c5ce"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#c0c5ce"/>
  <style name="Occurrences.Rename" background="#a7adba"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#de935f"/>

  <!-- language primitives -->
  <style name="Number" foreground="#de935f"/>
  <style name="String" foreground="#b5bd68"/>
  <style name="Keyword" foreground="#b294bb"/>
  <style name="Operator" foreground="#65737e"/>
  <style name="Preprocessor" foreground="#81a2be"/>
  <style name="Label" foreground="#cc6666"/>

  <!-- types, classes -->
  <style name="Type" foreground="#f0c674"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#81a2be"/>
  <style name="VirtualMethod" foreground="#81a2be" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#4f5b66"/>
  <style name="Local" foreground="#65737e"/>
  <style name="Static" foreground="#65737e"/>
  <style name="JsScopeVar" foreground="#65737e" italic="true"/>
  <style name="JsImportVar" foreground="#65737e" italic="true"/>
  <style name="JsGlobalVar" foreground="#65737e" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#dfe1e8"/>

  <!-- comments -->
  <style name="Comment" foreground="#c0c5ce"/>
  <style name="DisabledCode" foreground="#c0c5ce"/>
  <style name="Doxygen.Comment" foreground="#c0c5ce"/>
  <style name="Doxygen.Tag" foreground="#c0c5ce"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#b294bb"/>
  <style name="Binding" foreground="#cc6666"/>
  <style name="QmlExternalId" foreground="#81a2be" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#81a2be" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#b294bb"/>
  <style name="DiffLocation" foreground="#81a2be"/>
  <style name="AddedLine" foreground="#b5bd68"/>
  <style name="RemovedLine" foreground="#f0c674"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#b294bb"/>
  <style name="DiffContextLine" foreground="#81a2be"/>
  <style name="DiffSourceLine" foreground="#b5bd68"/>
  <style name="DiffSourceChar" foreground="#f0c674" background="#eff1f5"/>
  <style name="DiffDestLine" foreground="#b5bd68"/>
  <style name="DiffDestChar" foreground="#f0c674" background="#eff1f5"/>
</style-scheme>
