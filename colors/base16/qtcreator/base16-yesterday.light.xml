<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Yesterday Light">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#4d4d4c" background="#ffffff"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#969896"/>
  <style name="CurrentLine" background="#8e908c"/>
  <style name="LineNumber" foreground="#8e908c"/>
  <style name="CurrentLineNumber" foreground="#969896" bold="true"/>
  <style name="SearchResult" background="efefef"/>
  <style name="Parentheses" background="#d6d6d6" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#1d1f21" background="#8e908c"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#8e908c"/>
  <style name="Occurrences.Rename" background="#969896"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#f5871f"/>

  <!-- language primitives -->
  <style name="Number" foreground="#f5871f"/>
  <style name="String" foreground="#718c00"/>
  <style name="Keyword" foreground="#8959a8"/>
  <style name="Operator" foreground="#4d4d4c"/>
  <style name="Preprocessor" foreground="#4271ae"/>
  <style name="Label" foreground="#c82829"/>

  <!-- types, classes -->
  <style name="Type" foreground="#eab700"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#4271ae"/>
  <style name="VirtualMethod" foreground="#4271ae" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#282a2e"/>
  <style name="Local" foreground="#4d4d4c"/>
  <style name="Static" foreground="#4d4d4c"/>
  <style name="JsScopeVar" foreground="#4d4d4c" italic="true"/>
  <style name="JsImportVar" foreground="#4d4d4c" italic="true"/>
  <style name="JsGlobalVar" foreground="#4d4d4c" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#d6d6d6"/>

  <!-- comments -->
  <style name="Comment" foreground="#8e908c"/>
  <style name="DisabledCode" foreground="#8e908c"/>
  <style name="Doxygen.Comment" foreground="#8e908c"/>
  <style name="Doxygen.Tag" foreground="#8e908c"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#8959a8"/>
  <style name="Binding" foreground="#c82829"/>
  <style name="QmlExternalId" foreground="#4271ae" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#4271ae" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#8959a8"/>
  <style name="DiffLocation" foreground="#4271ae"/>
  <style name="AddedLine" foreground="#718c00"/>
  <style name="RemovedLine" foreground="#eab700"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#8959a8"/>
  <style name="DiffContextLine" foreground="#4271ae"/>
  <style name="DiffSourceLine" foreground="#718c00"/>
  <style name="DiffSourceChar" foreground="#eab700" background="#efefef"/>
  <style name="DiffDestLine" foreground="#718c00"/>
  <style name="DiffDestChar" foreground="#eab700" background="#efefef"/>
</style-scheme>
