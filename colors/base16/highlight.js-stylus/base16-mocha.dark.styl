$base00 = #3B3228;
$base01 = #534636;
$base02 = #645240;
$base03 = #7e705a;
$base04 = #b8afad;
$base05 = #d0c8c6;
$base06 = #e9e1dd;
$base07 = #f5eeeb;
$base08 = #cb6077;
$base09 = #d28b71;
$base0a = #f4bc87;
$base0b = #beb55b;
$base0c = #7bbda4;
$base0d = #8ab3b5;
$base0e = #a89bb9;
$base0f = #bb9584;

// Mocha Comment
.hljs-comment {
  color: $base04;
}

// Mocha Red
.hljs-variable,
.hljs-attribute,
.hljs-tag,
.hljs-regexp,
.ruby .hljs-constant,
.xml .hljs-tag .hljs-title,
.xml .hljs-pi,
.xml .hljs-doctype,
.html .hljs-doctype,
.css .hljs-id,
.css .hljs-class,
.css .hljs-pseudo {
  color: $base08;
}

// Mocha Orange
.hljs-number,
.hljs-preprocessor,
.hljs-built_in,
.hljs-literal,
.hljs-params,
.hljs-constant {
  color: $base09;
}

// Mocha Yellow
.ruby .hljs-class .hljs-title,
.css .hljs-rules .hljs-attribute {
  color: $base0a;
}

// Mocha Green
.hljs-string,
.hljs-value,
.hljs-inheritance,
.hljs-header,
.ruby .hljs-symbol,
.xml .hljs-cdata {
  color: $base0b;
}

// Mocha Aqua
.hljs-title,
.css .hljs-hexcolor {
  color: $base0c;
}

// Mocha Blue
.hljs-function,
.python .hljs-decorator,
.python .hljs-title,
.ruby .hljs-function .hljs-title,
.ruby .hljs-title .hljs-keyword,
.perl .hljs-sub,
.javascript .hljs-title,
.coffeescript .hljs-title {
  color: $base0d;
}

// Mocha Purple
.hljs-keyword,
.javascript .hljs-function {
  color: $base0e;
}

.hljs {
  display: block;
  overflow-x: auto;
  background: $base00;
  color: $base05;
  padding: 0.5em;
  -webkit-text-size-adjust: none;
}

.coffeescript .javascript,
.javascript .xml,
.tex .hljs-formula,
.xml .javascript,
.xml .vbscript,
.xml .css,
.xml .hljs-cdata {
  opacity: 0.5;
}
