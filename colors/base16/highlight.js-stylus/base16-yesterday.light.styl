$base00 = #1d1f21;
$base01 = #282a2e;
$base02 = #4d4d4c;
$base03 = #969896;
$base04 = #8e908c;
$base05 = #d6d6d6;
$base06 = #efefef;
$base07 = #ffffff;
$base08 = #c82829;
$base09 = #f5871f;
$base0a = #eab700;
$base0b = #718c00;
$base0c = #3e999f;
$base0d = #4271ae;
$base0e = #8959a8;
$base0f = #7f2a1d;

// Yesterday Comment
.hljs-comment {
  color: $base03;
}

// Yesterday Red
.hljs-variable,
.hljs-attribute,
.hljs-tag,
.hljs-regexp,
.ruby .hljs-constant,
.xml .hljs-tag .hljs-title,
.xml .hljs-pi,
.xml .hljs-doctype,
.html .hljs-doctype,
.css .hljs-id,
.css .hljs-class,
.css .hljs-pseudo {
  color: $base08;
}

// Yesterday Orange
.hljs-number,
.hljs-preprocessor,
.hljs-built_in,
.hljs-literal,
.hljs-params,
.hljs-constant {
  color: $base09;
}

// Yesterday Yellow
.ruby .hljs-class .hljs-title,
.css .hljs-rules .hljs-attribute {
  color: $base0A;
}

// Yesterday Green
.hljs-string,
.hljs-value,
.hljs-inheritance,
.hljs-header,
.ruby .hljs-symbol,
.xml .hljs-cdata {
  color: $base0B;
}

// Yesterday Aqua
.hljs-title,
.css .hljs-hexcolor {
  color: $base0C;
}

// Yesterday Blue
.hljs-function,
.python .hljs-decorator,
.python .hljs-title,
.ruby .hljs-function .hljs-title,
.ruby .hljs-title .hljs-keyword,
.perl .hljs-sub,
.javascript .hljs-title,
.coffeescript .hljs-title {
  color: $base0D;
}

// Yesterday Purple
.hljs-keyword,
.javascript .hljs-function {
  color: $base0E;
}

.hljs {
  display: block;
  overflow-x: auto;
  background: $base07;
  color: $base02;
  padding: 0.5em;
  -webkit-text-size-adjust: none;
}

.coffeescript .javascript,
.javascript .xml,
.tex .hljs-formula,
.xml .javascript,
.xml .vbscript,
.xml .css,
.xml .hljs-cdata {
  opacity: 0.5;
}
