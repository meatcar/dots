$base00 = #131513;
$base01 = #242924;
$base02 = #5e6e5e;
$base03 = #687d68;
$base04 = #809980;
$base05 = #8ca68c;
$base06 = #cfe8cf;
$base07 = #f4fbf4;
$base08 = #e6193c;
$base09 = #87711d;
$base0a = #98981b;
$base0b = #29a329;
$base0c = #1999b3;
$base0d = #3d62f5;
$base0e = #ad2bee;
$base0f = #e619c3;

// Atelier Seaside Comment
.hljs-comment {
  color: $base04;
}

// Atelier Seaside Red
.hljs-variable,
.hljs-attribute,
.hljs-tag,
.hljs-regexp,
.ruby .hljs-constant,
.xml .hljs-tag .hljs-title,
.xml .hljs-pi,
.xml .hljs-doctype,
.html .hljs-doctype,
.css .hljs-id,
.css .hljs-class,
.css .hljs-pseudo {
  color: $base08;
}

// Atelier Seaside Orange
.hljs-number,
.hljs-preprocessor,
.hljs-built_in,
.hljs-literal,
.hljs-params,
.hljs-constant {
  color: $base09;
}

// Atelier Seaside Yellow
.ruby .hljs-class .hljs-title,
.css .hljs-rules .hljs-attribute {
  color: $base0a;
}

// Atelier Seaside Green
.hljs-string,
.hljs-value,
.hljs-inheritance,
.hljs-header,
.ruby .hljs-symbol,
.xml .hljs-cdata {
  color: $base0b;
}

// Atelier Seaside Aqua
.hljs-title,
.css .hljs-hexcolor {
  color: $base0c;
}

// Atelier Seaside Blue
.hljs-function,
.python .hljs-decorator,
.python .hljs-title,
.ruby .hljs-function .hljs-title,
.ruby .hljs-title .hljs-keyword,
.perl .hljs-sub,
.javascript .hljs-title,
.coffeescript .hljs-title {
  color: $base0d;
}

// Atelier Seaside Purple
.hljs-keyword,
.javascript .hljs-function {
  color: $base0e;
}

.hljs {
  display: block;
  overflow-x: auto;
  background: $base00;
  color: $base05;
  padding: 0.5em;
  -webkit-text-size-adjust: none;
}

.coffeescript .javascript,
.javascript .xml,
.tex .hljs-formula,
.xml .javascript,
.xml .vbscript,
.xml .css,
.xml .hljs-cdata {
  opacity: 0.5;
}
