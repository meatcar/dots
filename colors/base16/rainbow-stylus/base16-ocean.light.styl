$base00 = #2b303b;
$base01 = #343d46;
$base02 = #4f5b66;
$base03 = #65737e;
$base04 = #a7adba;
$base05 = #c0c5ce;
$base06 = #dfe1e8;
$base07 = #eff1f5;
$base08 = #bf616a;
$base09 = #d08770;
$base0a = #ebcb8b;
$base0b = #a3be8c;
$base0c = #96b5b4;
$base0d = #8fa1b3;
$base0e = #b48ead;
$base0f = #ab7967;

pre {
    background-color: $base07;
    word-wrap: break-word;
    margin: 0px;
    padding: 10px;
    color: $base00;
    font-size: 14px;
    margin-bottom: 20px;
}

pre, code {
    font-family: 'Monaco', courier, monospace;
}

pre .comment {
    color: $base04;
}

pre .variable.global, pre .variable.class, pre .variable.instance {
    color: $base08; // red
}

pre .constant.numeric, pre .constant.language, pre .constant.hex-color, pre .keyword.unit {
    color: $base09; // orange
}

pre .constant, pre .entity, pre .entity.class, pre .support {
    color: $base0a; // yellow
}

pre .constant.symbol, pre .string {
    color: $base0b; // green
}

pre .entity.function, pre .support.css-property, pre .selector {
    color: $base0d; // blue
}

pre .keyword, pre .storage {
    color: $base0e; // purple
}
