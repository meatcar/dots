# vim: set ft=gitconfig :
[init]
  defaultBranch = main

[sendemail]
  smtpserver=mymsmtp
  smtpserveroption = --plain
  confirm = auto

[pull]
  ff = only
[push]
  default = simple

[credential]
  helper = git-credential-libsecret
[commit]
  #gpgsign = true

[alias]
  s = status -sb
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  ignore = "!gi() { curl -sL https://www.gitignore.io/api/$@ ;}; gi"
  change-commits = "!f() { VAR=$1; OLD=$2; NEW=$3; shift 3; git filter-branch --env-filter \"if [[ \\\"$`echo $VAR`\\\" = '$OLD' ]]; then export $VAR='$NEW'; fi\" $@; }; f "

[diff]
  algorithm = patience
  tool = nvimdiff
  colorMoved = default
[difftool]
  prompt = true
[difftool "nvimdiff"]
  cmd = nvim -d $LOCAL $REMOTE

[merge]
  tool = nvim_mergetool
  conflictStyle = diff3
[mergetool "nvim_mergetool"]
  prompt = true
  cmd = nvim -f -c "MergetoolStart" "$MERGED" "$BASE" "$LOCAL" "$REMOTE"
  trustExitCode = true
  keepBackup = false

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
[delta "light"]
  light = true
[delta "dark"]
  light = false
