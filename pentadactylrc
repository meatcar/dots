"1.0b5 (created: 2011/01/20 22:11:06)

loadplugins '\.(js|penta)$'
set runtimepath=/home/meatcar/.pentadactyl

" Set the tool-bar layout.
set go=bCrsN

" Set :open completion options:
set complete=slfS

" Set the default search engine
set defsearch=g
set suggestengines=g

" Set the colorscheme
colorscheme zenburn

" Hints:
" Make all hints uppercase
highlight -a Hint text-transform: uppercase;
" Make hints be home-row keys
set hintkeys='asdfg;lkjh'

" define which commands will ope in a new tab
set newtab=all 

" Define style overrides.
style -name=greymono www.dgp.toronto.edu body { font-family: monospace; bgcolor: #CCCCCC }

