# vim: ft=muttrc
set realname  = "Tech Happy"        # who am i?
set from      = "info@techhappy.ca"
set sendmail  = "/usr/bin/msmtp -a zoho"
set mbox      = "+zoho/Archives"
set postponed = "+zoho/Drafts"
set trash     = "+zoho/Trash"

alternates denys@techhappy\.ca denys\.pavlov@zoho\.com

unmailboxes *
mailboxes +zoho \
          +zoho/inbox \
          +zoho/Archives \
          +zoho/Sent \
          +zoho/Drafts \

color status red default

macro index,pager A \
    "<save-message>+zoho/Archives<enter>" \
    "archive message"

macro index,pager D \
    "<save-message>+zoho/Trash<enter>" \
    "move message to the trash"

macro index,pager S \
    "<save-message>+zoho/Spam<enter>"  \
        "mark message as spam"

macro index,pager \cf \
    "<shell-escape>mutt-mu zoho<enter><change-folder-readonly>+mu/search<enter>" \
    "search mail (using mu)"
