# --- vombatidae text colors ---
#  color normal     color230      color234
#  color message        color230      color234

# --- slightly less yellow text colors ---
color normal        white default
# color normal      color253    color233 # mod
#  color normal     color253    default # mod
color indicator     brightwhite    default
color status        black white
#  color tree           color113        color234
#  color tree           color173        color234
color tree          default default
color signature     default default
color message       default default
color attachment    default default
color error         brightwhite default
color tilde         default default

color search       default     default
color markers      default     default

#  mono bold          reverse
#  color bold         color173 color191
#mono underline     reverse
#  color underline    color48  color191

## quoted text
color quoted        blue  default
color quoted1       green  default
color quoted2       blue  default
color quoted3       green  default 
color quoted4       blue  default
color quoted5       green  default 
color quoted6       blue  default
color quoted7       green  default 
color quoted8       blue  default
color quoted9       green  default 

# color body          cyan  default  "((ftp|http|https)://|news:)[^ >)\"\t]+"
# color body          cyan  default  "[-a-z_0-9.+]+@[-a-z_0-9.]+"
# color body          red   default  "(^| )\\*[-a-z0-9*]+\\*[,.?]?[ \n]"
# color body          green default  "(^| )_[-a-z0-9_]+_[,.?]?[\n]"
# color body          red   default  "(^| )\\*[-a-z0-9*]+\\*[,.?]?[ \n]"
# color body          green default  "(^| )_[-a-z0-9_]+_[,.?]?[ \n]"
color index     brightyellow    default ~F         # Flagged
color index     blue      default ~N          # New
color index     blue      default ~O
color index     brightred       default ~T         # Tagged
color index     red             default ~D         # Deleted

