# --- vombatidae text colors ---
#  color normal		color230      color234
#  color message      	color230      color234

# --- slightly less yellow text colors ---
color normal		default     default
color indicator    	bold        default
color status       	default     default
color tree         	default     default
color signature    	default     default
color message      	default     default
color attachment	default     default
color error        	bold        default
color tilde        	bold        default

color search        bold        default
color markers       bold        default

#  mono bold          reverse
#  color bold         color173 color191
#  mono underline     reverse
#  color underline    color48  color191

color quoted        color2  default            # quoted text
color quoted1       color3  default
color quoted2       color2  default
color quoted3       color3  default
color quoted4       color2  default
color quoted5       color3  default
color quoted6       color2  default
color quoted7       color3  default
color quoted8       color2  default
color quoted9       color3  default

# color body          cyan  default  "((ftp|http|https)://|news:)[^ >)\"\t]+"
# color body          cyan  default  "[-a-z_0-9.+]+@[-a-z_0-9.]+"
# color body          red   default  "(^| )\\*[-a-z0-9*]+\\*[,.?]?[ \n]"
# color body          green default  "(^| )_[-a-z0-9_]+_[,.?]?[\n]"
# color body          red   default  "(^| )\\*[-a-z0-9*]+\\*[,.?]?[ \n]"
# color body          green default  "(^| )_[-a-z0-9_]+_[,.?]?[ \n]"
color index		        bold	        default ~F         # Flagged
color index         	bold         	default ~N          # New
color index         	bold        	default ~O
color index         	color3          default ~T         # Tagged
color index         	color2     	    default ~D         # Deleted

